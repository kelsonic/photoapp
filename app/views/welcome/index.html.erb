<% if current_user %>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <h3>Welcome, <%= current_user.email %>!</h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="home-bg container">
    <%= image_tag("home.png") %>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="row">
        <div class="plans clearfix">
          <div class="col-lg-3 col-lg-offset-3 well text-center">
            <h2>Free Plan</h2>
            <div class="price">
              Price: <strong>FREE</strong>
            </div>
            <br/>
            <div class="features">
              <ul>
                <li>Unlimited Image Uploads</li>
                <li>Responsive design</li>
                <li>Access anywhere</li>
                &nbsp;
              </ul>
            </div>
            <p>
              <%= link_to 'Sign Up', new_user_registration_path(plan: 'free'), class: 'btn btn-primary sign-up' %>
            </p>
          </div>
          <div class="col-lg-3 plan well text-center">
            <h2>Premium Plan</h2>
            <div class="price">
              Price: $10
            </div>
            <br/>
            <div class="features">
              <ul>
                <li>Unlimited Image Uploads</li>
                <li>Responsive design</li>
                <li>Access anywhere</li>
                <li class='extra'>Unlimited projects</li>
              </ul>
            </div>
            <p>
              <%= link_to 'Sign Up', new_user_registration_path(plan: 'premium'), class: 'btn btn-primary sign-up' %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>