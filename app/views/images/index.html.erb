<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <%- model_class = Image -%>
      
      <!--Image Index Header-->
      <div class="page-header text-center">
        <h1>Discover Photos</h1>
        <%= link_to "Upload a Photo", new_image_path, class: 'btn btn-success btn-lg' %>
      </div>
      
      <div class="row text-center">
        <% @images.each do |image| %>
          <div class="col-sm-12">
            <!--Image-->
            <%= image_tag(image.picture.url, size: "350", class: "img-responsive center-block") %>
            
            <!--Image Description-->
            <p class="image-description"><%= link_to image.name, image_path(image) %></p>
            
            <% if image.user == current_user %>
              <%= link_to "Edit",
                              edit_image_path(image), :class => 'btn btn-warning' %>
              <%= link_to "Delete",
                              image_path(image),
                              :method => :delete,
                              :data => { :confirm => t('.confirm',
                              :default => t("helpers.links.confirm",
                              :default => 'Are you sure?')) },
                              :class => 'btn btn-danger' %>
            <% end %>
          </div>
        <% end %>
      </div>
      
      
      
    </div>
  </div>
</div>