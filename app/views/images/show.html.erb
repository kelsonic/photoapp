<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <%- model_class = Image -%>
      <div class="page-header text-center">
        <h1><%= @image.name %></h1>
        <p class="image-date">Created on <%= @image.created_at %></p>
      </div>
      
      <div class="col-md-12 well well-image text-center">
        <%= image_tag(@image.picture.url, class: "img-responsive center-block") if @image.picture? %>
      </div>
      
      <div class="text-center">
        <%= link_to t('.back', :default => t("helpers.links.back")),
                      images_path, :class => 'btn btn-primary'  %>
        <% if @image.user == current_user %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_image_path(@image), :class => 'btn btn-lg btn-warning' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        image_path(@image),
                        :method => 'delete',
                        :data => { :confirm => t('.confirm',
                        :default => t("helpers.links.confirm",
                        :default => 'Are you sure?')) },
                        :class => 'btn btn-lg btn-danger' %>
        <% end %>
      </div>
    </div>
  </div>
</div>